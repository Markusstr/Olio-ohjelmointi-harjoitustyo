<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <FrameLayout
        android:id="@+id/adminEditFragmentWindow"
        android:layout_width="375dp"
        android:layout_height="372dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:elevation="2dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/settingstoolbar"
        app:layout_constraintStart_toStartOf="@+id/settingstoolbar"
        app:layout_constraintTop_toTopOf="@+id/settingstoolbar">

    </FrameLayout>

    <include
        android:id="@+id/settingstoolbar"
        layout="@layout/admin_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/adminRecyclerView"
        android:layout_width="411dp"
        android:layout_height="632dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toStartOf="@+id/settingstoolbar"
        app:layout_constraintStart_toEndOf="@+id/settingstoolbar"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/adminFoodRecyclerView"
        android:layout_width="411dp"
        android:layout_height="632dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toStartOf="@+id/settingstoolbar"
        app:layout_constraintStart_toEndOf="@+id/settingstoolbar"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="368dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settingstoolbar" />

    <ImageView
        android:id="@+id/admin_closefood"
        android:layout_width="27dp"
        android:layout_height="27dp"
        app:layout_constraintStart_toEndOf="@+id/spinner"
        app:layout_constraintTop_toTopOf="@+id/spinner"
        app:srcCompat="@drawable/ic_close" />


</android.support.constraint.ConstraintLayout>